<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="1272.0" style="-fx-background-color: #0C131D;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.authenticationframes.AdminDeleteFacultyController">
   <children>
      <!-- Background Image -->
      <ImageView fitHeight="640.0" fitWidth="1272.0" opacity="0.6" pickOnBounds="true" smooth="false">
         <image>
            <Image url="@../../../../../../../../IdeaProjects/REAL/src/main/resources/background.images/img_1.png" />
         </image>
      </ImageView>

      <!-- Delete Confirmation Card -->
      <AnchorPane layoutX="78.0" layoutY="66.0" opacity="0.87" prefHeight="507.0" prefWidth="1117.0" style="-fx-background-color: #193355; -fx-blend-mode: screen;">
         <children>

            <!-- Title -->
            <Text fill="WHITE" layoutX="348.0" layoutY="127.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Delete Faculty Member?" textAlignment="CENTER" wrappingWidth="419.26">
               <font>
                  <Font name="Dubai Regular" size="40.0" />
               </font>
            </Text>

            <!-- Prompt -->
            <Text fill="WHITE" layoutX="254.0" layoutY="194.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to delete this faculty member?" textAlignment="CENTER" wrappingWidth="608.66">
               <font>
                  <Font name="Dubai Light" size="27.0" />
               </font>
            </Text>

            <!-- Faculty Name (dynamic) -->
            <Text fx:id="facultyNameText" fill="WHITE" layoutX="254.0" layoutY="275.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Faculty Name" textAlignment="CENTER" underline="true" wrappingWidth="608.66">
               <font>
                  <Font name="Dubai Medium" size="32.0" />
               </font>
            </Text>

            <!-- Confirm Delete Button -->
            <Button fx:id="confirmDeleteButton" layoutX="182.0" layoutY="349.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="354.0" style="-fx-font-size: 25; -fx-background-color: #324D6F; -fx-font-family: Dubai;" text="Yes, Delete" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <effect>
                  <DropShadow height="31.0" offsetX="-2.0" offsetY="1.0" radius="16.0" width="35.0" />
               </effect>
            </Button>

            <!-- Cancel Button -->
            <Button fx:id="cancelButton" layoutX="579.0" layoutY="349.0" mnemonicParsing="false" prefHeight="68.0" prefWidth="354.0" style="-fx-font-size: 25; -fx-background-color: #324D6F; -fx-font-family: Dubai;" text="Cancel" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="30.0" />
               </font>
               <effect>
                  <DropShadow height="31.0" offsetX="-2.0" offsetY="1.0" radius="16.0" width="35.0" />
               </effect>
            </Button>

         </children>
      </AnchorPane>
   </children>
</AnchorPane>
