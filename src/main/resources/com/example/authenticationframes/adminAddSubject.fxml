<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="640.0" prefWidth="1272.0" style="-fx-background-color: #0C131D;"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.authenticationframes.AdminAddSubjectController">
   <children>
      <Pane layoutX="69.0" layoutY="69.0" prefHeight="547.0" prefWidth="1182.0">
         <children>
            <Text fill="WHITE" layoutX="2.0" layoutY="72.0" text="Subject Name">
               <font><Font size="22.0"/></font>
            </Text>
            <TextField fx:id="subjectNameField" layoutX="162.0" layoutY="43.0" prefHeight="40.0" prefWidth="387.0"/>

            <Text fill="WHITE" layoutX="619.0" layoutY="72.0" text="Subject Code">
               <font><Font size="22.0"/></font>
            </Text>
            <TextField fx:id="subjectCodeField" layoutX="751.0" layoutY="43.0" prefHeight="40.0" prefWidth="387.0"/>

            <Button fx:id="addSubjectButton" layoutX="522.0" layoutY="464.0"
                    text="Add Subject" style="-fx-background-color: #193355; -fx-font-size: 20;"
                    textFill="WHITE" onAction="#handleAddSubject">
               <font><Font name="Dubai Bold" size="20.0"/></font>
               <effect>
                  <DropShadow height="31.0" offsetX="-2.0" offsetY="1.0" radius="16.0" width="35.0"/>
               </effect>
            </Button>

            <Button fx:id="cancelButton" layoutX="522.0" layoutY="557.0"
                    text="Cancel" style="-fx-background-color: #5A5A5A; -fx-font-size: 16;"
                    textFill="WHITE" onAction="#handleCancel">
               <font><Font name="Dubai Bold" size="16.0"/></font>
            </Button>
         </children>
      </Pane>
   </children>
</AnchorPane>
